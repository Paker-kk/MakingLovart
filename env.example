# ================================
# Making 项目环境变量配置模板
# ================================

# -------------------- API配置 --------------------
# Gemini API Key（从 https://ai.google.dev/ 获取）
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# API基础URL（可选，如果需要自定义）
# VITE_API_BASE_URL=https://generativelanguage.googleapis.com/v1beta

# -------------------- 应用配置 --------------------
# 应用环境
NODE_ENV=production

# 应用端口（仅在开发模式下使用）
# PORT=5173

# -------------------- 功能开关 --------------------
# 是否启用AI功能（true/false）
VITE_ENABLE_AI=true

# 是否启用视频生成功能（true/false）
VITE_ENABLE_VIDEO=true

# 是否启用灵感库功能（true/false）
VITE_ENABLE_INSPIRATION=true

# -------------------- 其他配置 --------------------
# 日志级别（debug/info/warn/error）
VITE_LOG_LEVEL=info

# 是否启用性能监控
VITE_ENABLE_ANALYTICS=false

# ================================
# 使用说明：
# 1. 复制此文件为 .env 或 .env.local
# 2. 填写你的实际配置值
# 3. 不要将 .env 文件提交到版本控制系统
# ================================


